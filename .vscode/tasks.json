{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build yogi-core",
      "type": "shell",
      "problemMatcher": "$gcc",
      "command": "cmake --build .",
      "options": {
        "cwd": "${workspaceFolder}/build/yogi-core"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
